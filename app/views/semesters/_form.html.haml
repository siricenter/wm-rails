- disabled ||= false
= form_for @semester do |f|
	- if @semester.errors.any?
		#error_explanation
			%h2= "#{pluralize(@semester.errors.count, "error")} prohibited this semester from being saved:"
		%ul
			- @semester.errors.full_messages.each do |msg|
				%li= msg

	.row
		.form-group
		= f.label :name, class: [:'col-xs-2']
		.col-xs-10
			= f.text_field :name, class: [:'form-control'], disabled: (true if disabled) or false
	.row
		= f.label :deposit, class: [:'col-xs-2']
		.col-xs-10
			= f.number_field :deposit, class: [:'form-control'], disabled: (true if disabled) or false
	.row
		= f.label :rent, class: [:'col-xs-2']
		.col-xs-10
			= f.number_field :rent, class: [:'form-control'], disabled: (true if disabled) or false
	.row
		= f.label :start_date, class: [:'col-xs-2']
		.col-xs-10
			= f.date_select :start_date, disabled: (true if disabled) or false
	.row
		= f.label :end_date, class: [:'col-xs-2']
		.col-xs-10
			= f.date_select :end_date, disabled: (true if disabled) or false
	- unless disabled
		.row
			= f.submit 'Save', class: [:btn, :'btn-primary', :'col-xs-2']
