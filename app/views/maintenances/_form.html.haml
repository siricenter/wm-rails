= form_for @maintenance do |f|
  - if @maintenance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@maintenance.errors.count, "error")} prohibited this maintenance from being saved:"
      %ul
        - @maintenance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tenant_name
    = f.text_field :tenant_name
  .field
    = f.label :building_id
    %select{name: :'maintenance[building_id]', id: :maintenance_building_id}
      - @buildings.each do | building |
        %option{:value => building.id} #{building.name}
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :tenant_phone
    = f.text_field :tenant_phone
  .actions
    = f.submit 'Submit'