= form_for @amenity do |f|
	- if @amenity.errors.any?
		#error_explanation
			%h2= "#{pluralize(@amenity.errors.count, "error")} prohibited this amenity from being saved:"
			%ul
				- @amenity.errors.full_messages.each do |msg|
					%li= msg

	.field
		= label_tag :image, 'Image'
		= cl_image_upload_tag(:image_id)
	.field
		= f.label :title
		= f.text_field :title
	.field
		= f.label :description
		= f.text_area :description
	.actions
		= f.submit 'Save'
