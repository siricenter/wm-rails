/ Main jumbotron for a primary marketing message or call to action
.container-fluid
	.availability-bar
		%h3.check-text
			Check Availability:
		%p.col-xs-3
			= select_tag :semester, options_from_collection_for_select(@semesters, 'id', 'name'), class: ['form-control', 'col-md-2'], id: :'sem-select'
		.col-md-1.col-md-offset-1.gender-icon#womens
			= image_tag 'women_bg.png'
			%p Women
		.col-xs-1.col-md-1.gender-icon#mens
			= image_tag 'men_bg.png'
			%p Men
		.col-md-1
		.col-xs-3.col-md-2.col-md-offset-1.text-center.btn-blocky#available-answer
			%p 
.container
	.row.image

	
		.col-md-1

		%div(id="myCarousel" class="carousel slide col-md-10" data-ride="carousel")

			%ol(class="carousel-indicators")
				%li(data-target="#myCarousel" data-slide-to="0" class="active")
				%li(data-target="#myCarousel" data-slide-to="1")
				%li(data-target="#myCarousel" data-slide-to="2")
			
			%div(class="carousel-inner")
			
				%div(class="item active")
					= image_tag 'large_apt.jpg', class: 'slideImages', alt: 'First slide'
					%div(class="container")
						%div(class="carousel-caption")
							%h1.headline
								Example headline.
							%p.slideText
								This will be replaced with relevant text
							%p
								%a(class="btn btn-lg btn-primary" href="#" role="button")
									Sign up today
								 
				%div(class="item")
					= image_tag 'amenities_example.jpg', class: 'slideImages', alt: 'Second slide'
					%div(class="container")
						%div(class="carousel-caption")
							%h1.headline
								Another example headline
							%p.slideText
								This will also be replaced with relevant text
							%p
								%a(class="btn btn-lg btn-primary" href="#" role="button")
									Learn more
									
				%div(class="item")
					= image_tag 'studentsgrp.png', class: 'slideImages', alt: 'Third slide'
					%div(class="container")
						%div(class="carousel-caption")
							%h1.headline
								Headline
							%p.slideText
								We can put text here
							%p
								%a(class="btn btn-lg btn-primary" href="#" role="button")
									Learn more
						
				
			%a(class="left carousel-control" href="#myCarousel" role="button" data-slide="prev")
				%span(class="glyphicon glyphicon-chevron-left")
			%a(class="right carousel-control" href="#myCarousel" role="button" data-slide="next")
				%span(class="glyphicon glyphicon-chevron-right")


		.col-md-1


	.row.availability.marketing-text.col-md-12
		%h3
			= @marketing_text
.container
	.row.tiles
		.col-md-4.col-sm-4.tile
			.inner-tile
				%h3 Complex
				.circular.cir-img-complex
				%p Info about the complex
				%button.btn.cntr Coming Soon!
		.col-md-4.col-md-4.tile
			.inner-tile
				%h3 Apartments
				.circular.cir-img-apartments
				%p Info about the Apartments
				%button.btn.cntr Coming Soon!
		.col-md-4.col-md-4.tile
			.inner-tile
				%h3 Amenities
				.circular.cir-img-amenities
				%p Info about the amenities
				%button.btn.cntr Coming Soon!
		.col-md-4.col-md-4.tile
			.inner-tile
				%h3 Reservations
				.circular.cir-img-reservations
				%p Info about the reservations
				%button.btn.cntr Coming Soon!
		.col-md-4.col-md-4.tile
			.inner-tile
				%h3 Current Tenants
				.circular.cir-img-tenants
				%p Info for current tenants
				%button.btn.cntr Coming Soon!
		.col-md-4.col-md-4.tile
			.inner-tile
				%h3 Gallery
				.circular.cir-img-gallery
				%p A photo gallery
				%button.btn.cntr Coming Soon!
	/= render 'news'
	#social.row
		%h3.col-md-12.text-center Follow us on
		#social-icons.col-md-12
			.cntr.fit-width
				%a{:href => ""}
					= image_tag 'facebook.png'
				%a{:href => ""}
					= image_tag 'twitter.png'
	%hr/
	%footer
		%p.text-center &copy; Windsor Manor 2014
