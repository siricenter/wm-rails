/ Main jumbotron for a primary marketing message or call to action
.container-fluid
	.row.image
		= image_tag 'building_cropped.png'
		.marketing-bar
			= @marketing_text
	
	.availability-bar
		%h3.check-text
			Check Availability:
		%p.col-xs-12.col-sm-2.col-md-3
			= select_tag :semester, options_from_collection_for_select(@semesters, 'id', 'name'), class: ['form-control', 'col-md-2'], id: :'sem-select'
		.col-xs-3.col-sm-2.col-md-1.col-md-offset-1.col-lg-offset-1.gender-icon#womens
			= image_tag 'women_bg.png'
			%p Women
		.col-xs-3.col-sm-2.col-md-1.gender-icon#mens
			= image_tag 'men_bg.png'
			%p Men
		.text-center.btn-blocky#available-answer
			%p 

	.tiles
		#complex-tile.tile
			.inner-tile
				.tile-overlay
					%h3 Complex
		#apartments-tile.tile
			.inner-tile
				.tile-overlay
					%h3 Apartments
		#contracts-tile.tile
			.inner-tile
				.tile-overlay
					%h3 Contracts
.container.visible-xs
	.marketing-bar
		%h2.text-center
			= @marketing_text
	/= render 'news'
	#social.row
		%h3.col-md-12.text-center Follow us on
		#social-icons.col-md-12
			.cntr.fit-width
				%a{:href => ""}
					= image_tag 'facebook.png'
				%a{:href => ""}
					= image_tag 'twitter.png'
	%hr/
	%footer
		.cntr.fit-width
			%a(href="mailto:managers@windsormanor.net?Subject=Windsor%20Manor%20" target="_top")
				<span class="contact_manager">Contact the manager</span>
		%p.text-center &copy; Windsor Manor 2014