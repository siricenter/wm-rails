          = image_tag 'women_icon_wh.png'
          %p Women
        .col-md-1.gender-icon
          = image_tag 'men_icon_wh.png'
          %p Men
        .col-md-1
        .col-md-2.col-md-offset-1.text-center.btn-blocky
          %p Book Now
